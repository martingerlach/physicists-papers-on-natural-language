pages = {393},
pmid = {258301900004},
title = {{SOME WORD ORDER BIASES FROM LIMITED BRAIN RESOURCES: A MATHEMATICAL APPROACH}},
url = {http://www.worldscinet.com/acs/11/1103/S0219525908001702.html},
volume = {11},
