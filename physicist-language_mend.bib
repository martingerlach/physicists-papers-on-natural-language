mendeley-tags = {Zipf,phys-lang},
month = {jan},
number = {1},
pages = {120--130},
publisher = {Elsevier B.V.},
title = {{Order-disorder transition in conflicting dynamics leading to rank-frequency generalized beta distributions}},
