journal = {Chaos, Solitons {\&} Fractals},
keywords = {phys-lang},
mendeley-tags = {phys-lang},
month = {nov},
number = {11},
pages = {1349--1357},
title = {{Measuring complexity with multifractals in texts. Translation effects}},
url = {http://dx.doi.org/10.1016/j.chaos.2012.06.016 http://linkinghub.elsevier.com/retrieve/pii/S0960077912001580},
